#!/bin/bash

# A dmenu prompt to unmount drives.
# Provides you with mounted partitions, select one to unmount.
# Drives mounted at /, /boot and /home will not be options to unmount.

unmountusb() {
    chosen=$(echo "$drives" | rofi -dmenu -l 5 -i -p "Unmount which drive?" -r | awk '{print $1}')
    [ -z "$chosen" ] && exit
    sudo -A umount -l "$chosen" && notify-send "ðŸ’» USB unmounting" "$chosen unmounted." && exit \
        || notify-send -u critical "ðŸ’» USB unmounting" "Unmounting of $chosen failed." && exit 1
}

unmountphone() {
    chosen=$(echo "$devices" | rofi -dmenu -l 5 -i -p "Unmount which device?" -r)
    [ -z "$chosen" ] && exit
    sudo -A umount -l "$chosen" && notify-send "ï˜¡ Phone unmounting" "$chosen unmounted." && exit \
        || notify-send -u critical "ï˜¡ Phone unmounting" "Unmounting of $chosen failed." && exit 1
}

asktype() {
    case "$(printf "%s\n" ${choices[@]} | rofi -dmenu -l 3 -i -p "What do you want to unmount?" -r)" in
        USB) unmountusb ;;
        Phone) unmountphone ;;
    esac
}

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '$2=="part"&&$4!~/\/boot|\/home|\/mnt\/share$|\/mnt\/data$|SWAP/&&length($4)>1{printf "%s (%s)\n",$4,$3}')
devices=$(awk '/ifuse|simple-mtpfs/ {print $2}' /etc/mtab)
choices=()
choices+=($([ "$drives" ] && echo "USB"))
choices+=($([ "$devices" ] && echo "Phone"))

[ ${#choices[@]} -gt 1 ] && asktype
case ${choices[0]} in
    USB) unmountusb ;;
    Phone) unmountphone ;;
esac
