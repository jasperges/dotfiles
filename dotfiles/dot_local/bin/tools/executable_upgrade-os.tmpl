#!/bin/bash

{{ if eq .chezmoi.osRelease.id "fedora" -}}
sudo dnf upgrade \
    && flatpak update \
    && cargo install-update --all
{{ end -}}
{{ if eq .chezmoi.osRelease.id "ubuntu" -}}
sudo apt update && sudo apt full-upgrade \
    && flatpak update \
    && cargo install-update --all
{{ end -}}
exitcode="$?"
echo
read -n1 -s -r -p "Press any key to close this window..."
exit "${exitcode}"
