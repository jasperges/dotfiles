#!/bin/sh

run_telegram() {
    flatpak run org.telegram.desktop
}

run_slack() {
    flatpak run com.slack.Slack
}

run_ferdium() {
    flatpak run org.ferdium.Ferdium
}

run_signal() {
    flatpak run org.signal.Signal
}

{{ if ne .chezmoi.hostname "weerjappie" -}}
run_telegram &
run_ferdium &
run_signal
{{ end -}}
{{ if eq .chezmoi.hostname "weerjappie" -}}
run_slack &
run_ferdium
{{ end -}}
