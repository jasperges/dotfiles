#!/bin/bash

case $BUTTON in
    1) managevpn ;;
    3) toggle-nmtui ;;
esac

vpn() {
    # Don't show the name of the active VPN service on smaller monitors
    monitorwidth=$(xdotool getdisplaygeometry | cut -d ' ' -f 1)
    nmcli --terse --fields NAME,TYPE c show --active | head -n 1 \
        | awk -F ':' '\
        {if ($2=="vpn") \
            {if ('$monitorwidth' < 1680) \
                {printf "    VPN   "} \
            else \
                {printf "    %s   ", $1}} \
        else \
            {printf "    No VPN   "}}'
}

vpn
