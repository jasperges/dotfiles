#!/bin/bash

case $BUTTON in
    1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
    3) toggle-gotop ;;
esac

mem() {
    # Show the percentage of the used memory on smaller monitors
    monitorwidth=$(xdotool getdisplaygeometry | cut -d ' ' -f 1)
    free | awk '/Mem/ \
        {if ('$monitorwidth' >= 1920) \
            {printf "  ó°†¼ %d MiB/%d MiB   ", $3 / 1024.0, $2 / 1024.0 } \
        else \
            {printf "  ó°†¼ %d%%   ", $3 / $2 * 100 }}'
}

mem
# echo -e "  \x04 warning \x01   "
