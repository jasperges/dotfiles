#!/usr/bin/env sh

XF86Eject
    eject
super + Return
    start_terminal_in_pwd
super + space
    rofi_run
# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd
# super + equal
#     i3-msg -q "[class=alacritty title=scratchpad]" scratchpad show

# super + b; {b,q}
#     {rezblender, rezblenderqt}
super + c; {c,r}
    {rofi_calc, dmenu-rez-config}
super + d; {b, d, e, g, f, i, m, p, x, s}
    { \
        i3-msg -q "border toggle 4", \
        rofi_run drun, \
        dmenuunicode, \
        dmenu-googledrive, \
        feh --bg-fill $HOME/pictures/backgrounds/active_wallpaper, \
        setxinputs, \
        setup-monitors, \
        start_pomodoro, \
        clipmenu, \
        dmenu-scrot, \
    }
# super + w; {b,p,m,i,s}
#     {i3-msg -q "border toggle 4",start_pomodoro,setup-monitors,setxinputs,polybar_run}
super + i; {p,s}
    {import_photos,top_run}
super + shift + m; {m,u,s,d}
    {dmenumount,dmenuumount,dmenu-servermount,dmenu-serverumount}
super + o; {b, m, w, e, s, p, o, j, t}
    { \
        toggle-bashtop, neomutt_run, $BROWSER, emacs, emacs, \
        ncmpcpp_local, ncmpcpp_guybrush, dmenu-jobs, toggle-trayer \
    }
super + p
    passmenu
super + s; {t,b,a,p}
    { \
        i3-msg -q "[class=alacritty title=scratchpad] scratchpad show", \
        i3-msg -q "[class=alacritty title=blender*] scratchpad show", \
        i3-msg -q "[class=cli.py title=(?im)^.*|\s+allzpark\s+.*$] scratchpad show", \
        pulsemixer_show \
    }
super + v; {m, p, j, s, u, g, w, e, h, b}
    { \
        managevpn manage, managevpn Proton-NL, managevpn jjm-studio, \
        managevpn Submarine, managevpn Proton-US, managevpn Proton-UK, \
        managewifi, wifi-off, wifi-on, \
        dmenu-bluetooth \
    }
# super + shift + w
#     rename_workspace
# super + x; {x, s}
#     {clipmenu, dmenu-scrot}

# Pulse Audio controls
{_,shift} + XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%{;,; playsound /usr/share/sounds/freedesktop/stereo/bell.oga}
{_,shift} + XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%{;,; playsound /usr/share/sounds/freedesktop/stereo/bell.oga}
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Sreen brightness controls
XF86MonBrightness{Up,Down}
    screen_backlight {--increase,--decrease}

# Keyboard Backlight control
XF86KbdBrightness{Up,Down}
    keyboard_backlight {--increase,--decrease}

# Media player controls
XF86AudioPlay
    playerctl play-pause || mpc toggle
XF86AudioNext
    playerctl next || mpc next
XF86AudioPrev
    playerctl previous || mpc prev

# vim: set ts=4 sw=4 tw=72 et:
