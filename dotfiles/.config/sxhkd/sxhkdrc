XF86Eject
    eject
super + Return
    start_terminal_in_pwd
super + space
    rofi_run
super + Escape
	pkill -USR1 -x sxhkd && pkill -USR1 -x polybar
super + equal
    i3-msg -q "[class=alacritty title=scratchpad]" scratchpad show

super + b; {b,q}
    {rezblender,rezblenderqt}
