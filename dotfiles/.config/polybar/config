[module/temperature]
type = internal/temperature
interval = 10.0
thermal-zone = 1
hwmonpath = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 104
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}
ramp-font = 2
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/notification-mattermost]
type = custom/script
exec = ~/.config/polybar/notification-mattermost.sh
interval = 60

[module/vpn-status]
type = custom/ipc
hook-0 = vpn_status
initial = 1
format = <output>
click-left = managevpn

[module/spotify]
type = custom/script
exec = spotify_status --playpause-font 2
interval = 1
format = <label>

[module/mail]
type = custom/ipc
hook-0 = polybar_mail
initial = 1
format = <output>
click-left = "$TERMINAL" -n neomutt -e neomutt
click-right = setsid mailsync 2>/dev/null 1>&2 &

[module/pomodoro]
type = custom/ipc
hook-0 = pomodoro
initial = 0
format = <output>

