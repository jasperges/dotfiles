[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #777
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/topbar]
monitor = DP-0
width = 100%
height = 27
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 4

separator = |

font-0 = "Ubuntu Nerd Font:size=10;1"
; use this as icon font so they are a little bit bigger.
font-1 = "Ubuntu Nerd Font:size=12;3"
font-2 = fixed:pixelsize=10;1

modules-left = i3
modules-center = date spotify mpd
modules-right = cpu memory eth vpn-openvpn-status temperature alsa

tray-position = right
tray-padding = 6
tray-background = ${colors.background}
tray-tranparent = false
tray-scale = 1.0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[bar/topbar-secondary]
monitor = DP-2
