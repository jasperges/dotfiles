[custom]
padding = 3
bar-height = 23
bar-padding = 0
module-margin = 2

[bar/topbar]
monitor = ${local.topbar-monitor}
width = 100%
height = ${custom.bar-height}
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding = ${custom.bar-padding}

module-margin-left = ${custom.module-margin}
module-margin-right = ${custom.module-margin}

separator =

font-0 = "Ubuntu:size=10;1"
; use this as icon font so they are a little bit bigger.
font-1 = "Ubuntu Nerd Font:size=12;3"
font-2 = fixed:pixelsize=10;1
font-3 = "Ubuntu Nerd Font:size=16;3"
font-4 = "Ubuntu Nerd Font:size=13;3"

modules-left = ${local.topbar-modules-left}
modules-center = ${local.topbar-modules-center}
modules-right = ${local.topbar-modules-right}

tray-position = right
tray-padding = 6
tray-background = ${colors.background}
tray-scale = 1.0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

