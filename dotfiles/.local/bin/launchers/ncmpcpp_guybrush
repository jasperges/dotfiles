#!/bin/bash

# Check if an instance is already running. If yes, kill it, if not start a new one.
# This effectively makes it a toggle on/off.
pkill -U $UID -f ".*$TERMINAL -t ncmpcpp-guybrush -e ncmpcpp.*$" \
    || $TERMINAL --class OPAQUE -t ncmpcpp-guybrush -e ncmpcpp -h guybrush.local -p 5700 $@ &
