#!/bin/bash

# Check if an instance is already running. If yes, show it and quit. Else run new instance.
if [[ -n $(pgrep -a -U $UID $TERMINAL | grep -E "^[0-9]+ $TERMINAL -t ncmpcpp-guybrush.*$") ]]; then
    i3-msg -q "[class=St instance=ncmpcpp-guybrush] scratchpad show"
else
    # Launch new instance
    $TERMINAL -t ncmpcpp-guybrush -e ncmpcpp -h guybrush.local -p 5700 $1 &
fi
