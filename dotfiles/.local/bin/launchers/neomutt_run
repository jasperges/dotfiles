#!/bin/bash

# Check if an instance is already running. If yes, show it and quit. Else run new instance.
if [[ -n $(pgrep -a -U $UID $TERMINAL | grep -E "^[0-9]+ $TERMINAL -n neomutt.*$") ]]; then
    i3-msg -q "[class=St instance=neomutt] scratchpad show"
else
    # Launch new instance
    $TERMINAL -n neomutt -e neomutt $1 &
fi
