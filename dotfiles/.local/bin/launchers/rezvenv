#!/bin/bash

# readonly currentdir=$(pwd)
# cd $HOME/src/rez/rez-venv
# pipenv shell
# # [[ -d $currentdir ]] && cd $currentdir
# echo "cd-ing to previous dir"
# cd $currentdir
# bash "source $HOME/.local/share/virtualenvs/rez-venv-EJj29fqV/bin/activate"
venv=$(cd $HOME/src/rez/rez-venv && pipenv --venv)
if [[ -z $venv ]]; then
    echo "Could not find virtual env for (Bleeding) Rez."
    exit 1
fi
bash --init-file <(echo "export PS1='[\u@\h \W]\$ '; source $venv/bin/activate")
