#!/bin/bash

# TODO: set device props in a more generic way. For example, find out what
# property of which device is the 'natural scroll' and enable it.

# List all pointer device id's
# xinput list --short | sed -nEe 's/^.*id=([0-9]+).*slave[[:blank:]]+pointer.*$/\1/p'

# But for now just some hard coded values for the different computers I use.

if [ $(hostname) = 'fedorajappie' ]
then
    # Enable tapping, drag lock and natural scrolling
    xinput set-prop 14 301 1
    xinput set-prop 14 305 1
    xinput set-prop 14 309 1
elif [ $(hostname) = 'soeperjaps' ]
then
    # Enable natural scrolling
    xinput set-prop 8 290 1
elif [ $(hostname) = 'astudio09' ]
then
    # Enable natural scrolling and disable #^&$@! Wacom touch
    xinput set-prop 9 288 1
    xinput | grep Finger | awk -F '\t' '{print $2}' | awk -F '=' '{print $2}' | xargs -L 1 xinput disable
else
    # Nothing to do
    exit 0
fi
