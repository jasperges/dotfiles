#!/bin/bash

declare -a lines
declare -i remove=0

while IFS= read -r line; do
    lines+=("$line")
done

for ((i = 0; i < ${#lines[@]}; i++)); do
    if [[ $remove -eq 1 ]]; then
        remove=0
        continue
    fi
    if [[ ${lines[$i]} =~ ^!\[diagram\]\((.*)\)$ ]]; then
        imagepath="${BASH_REMATCH[1]}"
        if [[ ${lines[$i + 1]} =~ ^:::(.*):::$ ]]; then
            label="${BASH_REMATCH[1]}"
            remove=1
            echo "![${label}](${imagepath})"
        fi
        echo "${lines[$i]}"
    else
        echo "${lines[$i]}"
    fi
done
