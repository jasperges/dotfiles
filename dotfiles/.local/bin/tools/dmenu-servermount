#!/bin/sh
# Gives a dmenu prompt to run custom mount scripts.
# It expects these scripts to be in $HOME/.local/bin/tools and they should
# start with 'mount-'.

scriptdir=$HOME/.local/bin/tools
mounts=$(find $scriptdir -type f -executable -name "mount-*" -print0| xargs -0 -I {} basename {})
choice=$(echo "$mounts" | dmenu -p "Choose a mount script to run" \
    -l $(echo "$mounts" | wc -l) -it "productions" -r )
# choice=$(find $scriptdir -type f -executable -name "mount-*" -print0| xargs -0 -I {} basename {} | dmenu -l 5 -p "Choose a mount script to run" -r)
[ -n $choice ] && $scriptdir/$choice
