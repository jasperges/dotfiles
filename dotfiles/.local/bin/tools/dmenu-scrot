#!/bin/bash

choice=$(echo -e "Selection\nSelection and View\nSelection + Edit in Gimp" | dmenu -p "Choose how to take a screenshot" -no-custom -i)
case $choice in
    "Selection" )
        scrot '%Y-%m-%d-%H%M%S_$wx$h.png' -selection -e 'mv $f ~/pictures/screenshots/';;
    "Selection and View" )
        scrot '%Y-%m-%d-%H%M%S_$wx$h.png' -selection -e 'mv $f ~/pictures/screenshots/ && sxiv ~/pictures/screenshots/$f';;
    "Selection + Edit in Gimp" )
        scrot '%Y-%m-%d-%H%M%S_$wx$h.png' -selection -e 'mv $f ~/pictures/screenshots/ && gimp ~/pictures/screenshots/$f';;
esac
