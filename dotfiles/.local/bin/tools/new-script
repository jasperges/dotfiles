#!/bin/sh

test ! -n "${SCRIPTS}"  && echo "SCRIPTS not set" && exit 1;
test ! -n "${1}"  && echo "usage: newscript <name>" && exit 1;

path="${SCRIPTS}/${1}"

if test -e "${path}"; then
  read -p "${1} already exists. Edit? " yes
  case "${yes}" in
    y|yes|yep|yeppers|yeah|ok|okay) exec $EDITOR "${path}"
  esac
  exit 0
fi

printf "#!/bin/bash\n\n\n" > "${path}"
chmod 755 "${path}"
exec $EDITOR +3 "${path}"
