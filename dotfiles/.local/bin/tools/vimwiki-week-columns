#!/bin/bash

for i in {1..5}; do
    if [[ $i -eq 1 ]]; then
        # Add weeknumber on Mondays
        week="%U"
    else
        week="  "
    fi
    LC_TIME=nl_NL.utf8 date "+|      |          |   $week | %Y-%m-%d %a |      |            |               |             |                |" -d "last sunday +$i day"
done
