#!/bin/sh

hdd() {
    # Show the percentage of the used diskspace on smaller monitors
    monitorwidth=$(xdotool getdisplaygeometry | cut -d ' ' -f 1)
    df -h | awk '/fedora00-home/ \
        {if ('$monitorwidth' >= 1920) \
            {printf "   %s/%s   ", $3, $2} \
        else
            {printf "   %d%%   ", $3 / $2 * 100}}'
}

hdd
