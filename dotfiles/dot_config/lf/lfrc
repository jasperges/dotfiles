# Jasper's lf settings

# Basic vars
set shell bash
set sixel false
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
# set color256
set icons		# Enable icons. Requires nerd fonts and LF_ICONS variable.
set drawbox

# cmds/functions
cmd open ${{
    case $(file --mime-type $f -b) in
    	text/troff) man ./ $f;;
        text/*) $EDITOR $fx;;
        image/x-xcf) setsid gimp $f >/dev/null 2>&1 & ;;
        image/svg*xml) setsid inkscape $f >/dev/null 2>&1 & ;;
        image/*) rotdir $f | setsid imv ;;
        audio/*) mpv --input-ipc-server=/tmp/mpvsoc$(date +%%s) $f ;;
        video/*) setsid mpv --input-ipc-server=/tmp/mpvsoc$(date +%%s) $f -quiet >/dev/null 2>&1 & ;;
        application/pdf) setsid zathura $fx >/dev/null 2>&1 & ;;
        *) for f in $fx; do setsid $OPENER $f >/dev/null 2>&1 & done;;
    esac
}}

cmd newdelete ${{
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf $fx
}}

cmd moveto ${{
	set -f
	clear; echo "Move to where?"
	dest="$(cut -d'	' -f2- ~/.config/shell/bm-dirs | fzf)" &&
	eval mv -iv $fx $dest &&
	notify-send "ðŸšš File(s) moved." "File(s) moved to $dest."
}}

cmd copyto ${{
	set -f
	clear; echo "Copy to where?"
	dest="$(cut -d'	' -f2- ~/.config/shell/bm-dirs | fzf)" &&
	eval cp -ivr $fx $dest &&
	notify-send "ðŸ“‹ File(s) copied." "File(s) copies to $dest."
}}

cmd bulkrename ${{
    vidir $fx
}}

cmd copyclipboard ${{
        set -f
        echo $f | wl-copy
	notify-send "ðŸ“‹ File path copied to clipboard."
}}

cmd fzf_jump ${{
    res="$(cut -d'	' -f2 ${XDG_CONFIG_HOME:-$HOME/config}/shell/bookmarkrc | fzf --header='Jump to location')"
    if [ -d "$res" ]; then
        cmd="cd"
    else
        cmd="select"
    fi
    lf -remote "send $id $cmd \"$res\""
}}

# Bindings
# map c $lf -remote "send $id cd $(cut -d'	' -f2 ~/.config/directories | fzf)"
map <c-f> $lf -remote "send $id select '$(fzf)'"
# map J $lf -remote "send $id cd $(cut -d'	' -f2 ${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs | fzf)"
map J fzf_jump
map gh
map g top
map D delete
map C copyto
map c copyclipboard
map M moveto
map a push %mkdir<space>
map r rename
map R $lf -remote "send $id push :rename<space>$f"
map b bulkrename
map <c-r> reload
map <enter> shell
map x $$f
map X !$f
# map o &mimeopen $f
map o open $f
map O $mimeopen --ask $f
map f set hidden!
map sg push :glob-select<space>
map su unselect
